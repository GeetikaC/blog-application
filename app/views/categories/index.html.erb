<div class="row">

	<!-- Blog Entries Column -->
	<div class="col-md-8">

	  <h1 class="my-4">All Categories
	    <small><%= @categories.length %></small>
	  </h1>

	  <!-- Blog Post -->
	<% if @categories.empty? %>
	  <p>No categories found.</p>
	<% else %>
	  <% @categories.each do |category| %>
	  <div class="card mb-4">
	    <div class="card-body">
	    		<h2 class="card-title"><%= link_to category.name, category_path(category.id) %>(<%= Article.where('category_id=?', category.id).length %>)</h2>
	    		<p class="card-text"><%= category.description %></p>

	    </div>
	  </div>
	  <% end %>
	<% end %>
	<%= render '/categories/list' %>
</div>